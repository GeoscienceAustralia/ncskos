#!/bin/bash
# Shell script to invoke ncskosdump Python script in BASH
# Written by Alex Ip 4/10/2016
# Example invocation: ncskosdump -hs ~/workspace/ncskosdump/ncskosdump/test/sst.ltm.1971-2000_skos.nc --skos lang=pl altLabels=True narrower=True broader=True

# Assume script is in bin directory under module directory
export PYTHONPATH=$(dirname $(dirname $(readlink -f "$0"))):$PYTHONPATH

python -m ncskosdump $@